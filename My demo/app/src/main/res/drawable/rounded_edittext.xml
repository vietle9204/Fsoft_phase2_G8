<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Bo góc -->
    <corners android:radius="12dp" />
    <!-- Màu nền trắng -->
    <solid android:color="#FFFFFF" />
    <!-- Viền xám nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
